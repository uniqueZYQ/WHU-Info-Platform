<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_navigation"
    android:layout_gravity="bottom"
    android:id="@+id/bottom_navigation"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/navigation_m_c"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/message_center_u"/>

        <TextView
            android:id="@+id/message_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="11dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="3.5dp"
            android:layout_marginLeft="22dp"/>

        <Button
            android:id="@+id/navigation_i_h"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/info_hall_u"/>

        <TextView
            android:id="@+id/info_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息大厅"
            android:textSize="11dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="3.5dp"
            android:layout_marginLeft="84dp"/>

        <Button
            android:id="@+id/navigation_publish_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/publish_info"/>

        <Button
            android:id="@+id/navigation_p_c"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/personal_center_u"/>

        <TextView
            android:id="@+id/personal_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史发布"
            android:textSize="11dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="3.5dp"
            android:layout_marginRight="13dp"/>

        <Button
            android:id="@+id/navigation_p_m"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="95dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/personal_message_u"/>

        <TextView
            android:id="@+id/personal_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:textSize="11dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="3.5dp"
            android:layout_marginRight="102dp"/>

    </FrameLayout>

</LinearLayout>